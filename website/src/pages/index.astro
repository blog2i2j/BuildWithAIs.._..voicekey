---
/**
 * Voice Key 官网首页（英文）
 */
import { Image } from 'astro:assets'
import BaseLayout from '@layouts/BaseLayout.astro'
import logoImage from '../assets/logo.png'
import {
  Download,
  Github,
  Keyboard,
  Globe,
  Shield,
  Zap,
  Monitor,
  LayoutTemplate,
} from 'lucide-react'
import LanguageSwitch from '@components/LanguageSwitch.astro'

const title = 'Voice Key - Voice to Text, One Key to Input'
const description =
  'Press hotkey to speak, release to type anywhere. Voice Key is a cross-platform app (macOS & Windows) that converts your voice to text instantly.'
---

<BaseLayout title={title} description={description} lang="en">
  <!-- Hero Section -->
  <section
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
  >
    <LanguageSwitch lang="en" />
    
    <!-- 背景光效 -->
    <div
      class="absolute inset-0 bg-linear-to-r from-primary/20 via-primary/10 to-accent/20 blur-3xl opacity-50"
    >
    </div>

    <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <div
          class="w-24 h-24 rounded-3xl flex items-center justify-center shadow-2xl animate-fade-in overflow-hidden bg-background"
        >
          <Image
            src={logoImage}
            alt="Voice Key Logo"
            width={96}
            height={96}
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- 标题 -->
      <h1
        class="text-5xl md:text-7xl font-bold mb-6 text-foreground animate-fade-in tracking-tight"
      >
        Voice Key
      </h1>

      <!-- 副标题 -->
      <p
        class="text-xl md:text-2xl text-muted-foreground mb-8 animate-slide-up"
      >
        Voice to text, one key to input.<br />
        <span class="text-foreground/80"
          >Press hotkey to speak, release to type anywhere.</span
        >
      </p>

      <!-- CTA 按钮 -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up"
      >
        <a
          href="https://github.com/BuildWithAIs/voicekey/releases/latest"
          class="px-8 py-4 bg-primary text-primary-foreground rounded-full text-lg font-semibold hover:opacity-90 transition-opacity flex items-center justify-center gap-2 shadow-lg hover:shadow-primary/25"
        >
          <Download className="w-6 h-6" />
          Download App
        </a>
        <a
          href="https://github.com/BuildWithAIs/voicekey"
          class="px-8 py-4 border border-border bg-secondary text-secondary-foreground hover:bg-secondary/80 rounded-full text-lg font-semibold transition-colors flex items-center justify-center gap-2"
        >
          <Github className="w-6 h-6" />
          View on GitHub
        </a>
      </div>

      <!-- 版本信息 -->
      <p class="mt-8 text-sm text-muted-foreground">
        Latest: v0.1.6 · macOS & Windows Supported
      </p>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 px-6 bg-muted/30">
    <div class="max-w-6xl mx-auto">
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-16 text-foreground"
      >
        Why Voice Key?
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <Keyboard className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Push-to-Talk
          </h3>
          <p class="text-muted-foreground">
            Hold the hotkey while speaking, release to input. Simple and
            intuitive.
          </p>
        </div>

        <!-- Feature 2 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <Globe className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Multi-language
          </h3>
          <p class="text-muted-foreground">
            Support Chinese, English and more languages. Switch anytime.
          </p>
        </div>

        <!-- Feature 3 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <Shield className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Privacy First
          </h3>
          <p class="text-muted-foreground">
            Audio processed locally. Your voice never leaves your device.
          </p>
        </div>

        <!-- Feature 4 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <Zap className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Lightning Fast
          </h3>
          <p class="text-muted-foreground">
            Sub-second recognition. Type faster than you can type.
          </p>
        </div>

        <!-- Feature 5 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <Monitor className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Works Everywhere
          </h3>
          <p class="text-muted-foreground">
            Input to any app - browsers, editors, chat apps, you name it.
          </p>
        </div>

        <!-- Feature 6 -->
        <div
          class="p-6 rounded-2xl bg-card border border-border hover:border-primary/50 transition-colors shadow-xs group"
        >
          <div
            class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors"
          >
            <LayoutTemplate className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-card-foreground">
            Beautiful HUD
          </h3>
          <p class="text-muted-foreground">
            Elegant floating overlay shows recording status in real-time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 px-6 border-t border-border bg-background">
    <div class="max-w-6xl mx-auto text-center text-muted-foreground">
      <p class="mb-4">© 2026 Voice Key. All rights reserved.</p>
      <div class="flex justify-center gap-6">
        <a
          href="https://github.com/BuildWithAIs/voicekey"
          class="hover:text-foreground transition-colors"
        >
          GitHub
        </a>
      </div>
    </div>
  </footer>
</BaseLayout>
