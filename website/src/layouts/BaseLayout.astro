---
/**
 * BaseLayout - 基础页面布局
 * 所有页面共用的 HTML 骨架
 */

interface Props {
  title: string
  description?: string
  lang?: 'en' | 'zh'
  ogImage?: string
}

const {
  title,
  description = 'Voice Key - Voice to text, one key to input. Press hotkey to speak, release to type anywhere.',
  lang = 'en',
  ogImage = '/og-image.png',
} = Astro.props

const siteName = 'Voice Key'
const siteUrl = 'https://buildwithaIs.github.io/voicekey'
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="BuildWithAIs" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />
    <meta property="og:url" content={siteUrl} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased dark">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
